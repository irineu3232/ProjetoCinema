@model IEnumerable<Cinema.Models.Diretor>


<a asp-action="Criar"> Cadastrar Diretor</a>

@if (Model != null || Model.Any())
{
    <table class="">

        <thead>

            <tr>

                <th>Nome</th>

                <th>Pais de Origem</th>


                <th class="col-acoes">Ações</th>

            </tr>

        </thead>

        <tbody>

            @foreach (var l in Model)

            {

                <tr>

                    <td>@l.nome /></td>

                    <td>@l.pais_origem</td>


                    <td>

                        <div class="acoes">

                            <form asp-action="Editar" method="get">

                                <input type="hidden" name="id" value="@l.id_diretor" />

                                <button type="submit" class="btn btn-editar">Editar</button>

                            </form>

                            <form asp-action="Excluir" method="post" onsubmit="return confirm('Excluir este livro?');">

                                @Html.AntiForgeryToken()

                                <input type="hidden" name="id" value="@l.id_diretor" />

                                <button type="submit" class="btn btn-excluir">Excluir</button>

                            </form>

                        </div>

                    </td>

                </tr>

            }

        </tbody>

    </table>
}
else
{
    <p>Nenhum diretor encontrado</p>
}
