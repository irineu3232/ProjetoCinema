@model Cinema.Models.Filme

@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Cadastrar Filme";

}


<link href="~/css/criar.css" rel="stylesheet" />

<h2 class="h">Cadastrar Filme</h2>

<link href="~/css/acoes.css" rel="stylesheet" />

