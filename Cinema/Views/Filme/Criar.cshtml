        </select>

    </div>

    <div class="d">

        <label class="l">Genero:</label>

        <select asp-for="genero" asp-items="ViewBag.Genero" class="s">

            <option value="">Selecione o Genero</option>

        </select>

    </div>


    <div class="d">
        <label class="l"> Capa do filme: </label>
        <input asp-for="capa" type="file" required class="i" />
    </div>

    <button type="submit" class="b">Cadastrar</button>
