@model Cinema.Models.Filme

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Filme";
}

<link href="~/css/criar.css" rel="stylesheet" />
<body>
<h2 class="h">Editar Filme</h2>

<form asp-action="Editar" method="post" enctype="multipart/form-data" class="f">

    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="id_filme" class="i" />
    <span asp-validation-for="id_filme" class="text-danger"></span>

    <div class="d">
        <label class="l">Título:</label>
        <input asp-for="titulos" required class="i" />
        <span asp-validation-for="titulos" class="text-danger"></span>
    </div>

    <div class="d">
        <label class="l">Diretor:</label>
        <select asp-for="id_diretor" asp-items="ViewBag.Diretor" class="s">
            <option value="">Selecione um diretor</option>
        </select>
        <span asp-validation-for="id_diretor" class="text-danger"></span>
    </div>

    <div class="d">
        <label class="l">Gênero:</label>
        <select asp-for="genero" asp-items="ViewBag.Genero" class="s">
            <option value="">Selecione o gênero</option>
        </select>
        <span asp-validation-for="genero" class="text-danger"></span>
    </div>

    <div class="d">
        <label class="l">Capa do filme:</label>
        <input asp-for="capa" type="file" required class="i" />
        <span asp-validation-for="capa" class="text-danger"></span>
    </div>

    <button type="submit" class="b">Editar</button>
    <a asp-action="Index" class="a">Voltar</a>

</form>
</body>