@model IEnumerable<Cinema.Models.Genero>


<a asp-action="Criar"> Cadastrar Genero</a>

@if(Model != null || Model.Any())
{

    <table class="">

        <thead>

            <tr>

                <th>Genero</th>



                <th class="col-acoes">Ações</th>

            </tr>

        </thead>

        <tbody>

            @foreach (var l in Model)

            {

                <tr>

                    <td>@l.nomeGen /></td>

                    
                    <td>

                        <div class="acoes">

                            <form asp-action="Editar" method="get">

                                <input type="hidden" name="id" value="@l.id" />

                                <button type="submit" class="btn btn-editar">Editar</button>

                            </form>

                            <form asp-action="Excluir" method="post" onsubmit="return confirm('Excluir este livro?');">

                                @Html.AntiForgeryToken()

                                <input type="hidden" name="id" value="@l.id" />

                                <button type="submit" class="btn btn-excluir">Excluir</button>

                            </form>

                        </div>

                    </td>

                </tr>

            }

        </tbody>

    </table>
}
else
{
        <p>Nenhuma genero de filme encontrada </p>
}